{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main>
    <div class="container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <h1 class="my-5 text-center font-weight-normal">Register</h1>
            </div>
        </div>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-5">
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <button type="submit" class="btn btn-lg btn-outline-secondary me-3">Register</button>
                    <a href="{{path('app_login')}}" class="link-secondary link-opacity-50-hover link-underline-opacity-50-hover fs-5">Login</a>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</main>
{% endblock %}
