{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main>
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-5">
                    <h1 class="my-5 text-center font-weight-normal">Sign in to Your account</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mb-5" autocomplete="current-password" required>
                </div>
            </div>
            
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <div class="row">
                <div class="col text-center">
                    <button class="btn btn-lg btn-outline-secondary me-3" type="submit">
                        Sign in
                    </button>
                    <a href="{{path('app_register')}}" class="link-secondary link-opacity-50-hover link-underline-opacity-50-hover fs-5">Create account</a>
                </div>
            </div>
        </form>
    </div>
</main>
{% endblock %}
